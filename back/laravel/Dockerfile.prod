# Dockerfile para producción
FROM php:8.2-fpm

# Instalar extensiones necesarias
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    zip \
    unzip \
    && docker-php-ext-install pdo_mysql gd zip

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Establecer el directorio de trabajo
WORKDIR /var/www

# Copiar todos los archivos de la aplicación al contenedor
COPY . /var/www

# Verificar que el archivo .env.example esté presente
RUN ls -la /var/www/.env.example  # Este comando muestra los archivos en /var/www

# Copiar el archivo .env.example como .env, si no existe .env
RUN cp /var/www/.env.example /var/www/.env

# Instalar dependencias
RUN composer install --no-dev --optimize-autoloader

# Generar clave de la aplicación
RUN php artisan key:generate

# Permisos para el almacenamiento
RUN chown -R www-data:www-data /var/www/storage /var/www/bootstrap/cache

# Exponer el puerto 8000
EXPOSE 8000

# Comando para ejecutar la aplicación
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]